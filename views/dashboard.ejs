<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DashBoard</title>


    <!-- Link CSS -->
    <link rel="stylesheet" href="./css/dashboard.css">

    <!-- Link Font Awesome -->
    <script src="https://kit.fontawesome.com/f497ae5ec9.js" crossorigin="anonymous"></script>

    <!-- Link Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
</head>

<body>
    <div class="dashboard">
        <section>
            <h3>Your Account</h3>
            <div class="dashboard-container">
                <!-- Track Orders -->
                <a href="/user/orders">
                    <div class="dashboard-container-card">
                        <div class="fav-icon-container">
                            <img src="./images/dashboard-icons/icons8-cardboard-box-96.png" alt="">
                        </div>
                        <div class="dashboard-container-card-info">
                            <h4>Your Orders</h4>
                            <p>Track, return or review products</p>
                        </div>
                    </div>
                </a>

                <!-- Login and Security -->
                <a href="/user/profile">
                    <div class="dashboard-container-card">
                        <div class="fav-icon-container">
                            <img src="./images/dashboard-icons/icons8-user-secured-96.png" alt="">
                        </div>
                        <div class="dashboard-container-card-info">
                            <h4>Login and Security</h4>
                            <p>Edit login, name, email and mobile number</p>
                        </div>
                    </div>
                </a>

                <!-- Address -->
                <a href="/user/address-book">
                    <div class="dashboard-container-card">
                        <div class="fav-icon-container">
                            <img src="./images/dashboard-icons/icons8-location-96.png" alt="">
                        </div>
                        <div class="dashboard-container-card-info">
                            <h4>Your Address</h4>
                            <p>Edit address for Orders and gifts</p>
                        </div>
                    </div>
                </a>

                <!-- My Coupouns -->
                <a href="/user/myCoupons">
                    <div class="dashboard-container-card">
                        <div class="fav-icon-container">
                            <img src="./images/dashboard-icons/icons8-discount-96.png" alt="">
                        </div>
                        <div class="dashboard-container-card-info">
                            <h4>My Coupons</h4>
                            <p>Offers at different products for you</p>
                        </div>
                    </div>
                </a>

                <!-- My Cart -->
                <a href="/user/cart">
                    <div class="dashboard-container-card">
                        <div class="fav-icon-container">
                            <img src="./images/dashboard-icons/icons8-shopping-cart-96.png" alt="">
                        </div>
                        <div class="dashboard-container-card-info">
                            <h4>My Cart</h4>
                            <p>Contains list of products that are present in your shopping cart</p>
                        </div>
                    </div>
                </a>

                <!-- WishList -->
                <a href="/user/wishlist">
                    <div class="dashboard-container-card">
                        <div class="fav-icon-container">
                            <img src="./images/dashboard-icons/icons8-wish-list-96.png" alt="">
                        </div>
                        <div class="dashboard-container-card-info">
                            <h4>WishList</h4>
                            <p>Maintain a list of products that you want to purchase</p>
                        </div>
                    </div>
                </a>

            </div>
        </section>
    </div>
</body>

</html>